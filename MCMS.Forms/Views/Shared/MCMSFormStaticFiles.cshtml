@using MCMS.Forms
@{
    var basePath = MCMSFormsHelper.GetBasePath(Url);
}
<script>
    const mcmsFormsStaticFiles = {
        load: function () {
            if (this.loaded) { return; }
            this.loaded = true;
            for (let i = 0; i < this.files.js.length; i++) {
                const script = document.createElement('script');
                script.src = this.files.js[i];
                document.body.appendChild(script);
            }
            for (let j = 0; j < this.files.css.length; j++) {
                const link = document.createElement('link');
                link.href = this.files.css[j];
                link.rel = 'stylesheet';
                document.head.appendChild(link);
            }
        },
        loaded: false,
        files: {
            js: [
               "@basePath/mcms-form.polyfills.js",
               "@basePath/mcms-form.main.js"
            ],
            css:  ["@basePath/styles.css"]
        }
    }
</script>